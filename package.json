{
  "name": "navigator-demo",
  "version": "0.1.0",
  "description": "引用导航器 - 以批注为核心的知识管理系统",
  "main": "dist-electron/main.js",
  "scripts": {
    "dev": "concurrently \"bun run dev:vite\" \"bun run dev:electron\"",
    "dev:vite": "vite",
    "dev:electron": "wait-on tcp:3000 && bun run build:electron && electron .",
    "build": "bun run build:vite && bun run build:electron && electron-builder",
    "build:vite": "vite build",
    "build:electron": "tsc -p tsconfig.electron.json",
    "preview": "vite preview",
    "lint": "eslint src --ext .ts,.tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "format": "prettier --write src/**/*.{ts,tsx,js,jsx,json,css,md}",
    "format:check": "prettier --check src/**/*.{ts,tsx,js,jsx,json,css,md}",
    "type-check": "tsc --noEmit",
    "clean": "rimraf dist dist-electron",
    "clean:install": "rimraf node_modules package-lock.json && bun install",
    "test": "echo \"No tests specified\" && exit 0"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "pdfjs-dist": "^3.11.174",
    "zustand": "^4.4.4",
    "lucide-react": "^0.294.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.37",
    "@types/react-dom": "^18.2.15",
    "@vitejs/plugin-react": "^4.1.1",
    "electron": "^27.1.3",
    "electron-builder": "^24.6.4",
    "vite": "^5.0.0",
    "concurrently": "^8.2.2",
    "wait-on": "^7.2.0",
    "typescript": "^5.2.2",
    "electron-is-dev": "^2.0.0",
    "@typescript-eslint/eslint-plugin": "^6.13.1",
    "@typescript-eslint/parser": "^6.13.1",
    "eslint": "^8.54.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "prettier": "^3.1.0",
    "rimraf": "^5.0.5"
  },
  "build": {
    "appId": "com.navigator.demo",
    "productName": "Navigator Demo",
    "directories": {
      "output": "dist"
    },
    "files": [
      "dist-electron/**/*",
      "dist/**/*"
    ],
    "mac": {
      "target": "dmg",
      "category": "public.app-category.productivity"
    },
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "linux": {
      "target": "AppImage",
      "category": "Office"
    }
  }
}
